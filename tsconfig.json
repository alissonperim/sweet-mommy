{
  "compilerOptions": {
      "experimentalDecorators": true,
      "lib": [
          "ESNext"
      ],
      "moduleResolution": "node",
      "removeComments": true,
      "sourceMap": true,
      "strict": true,
      "target": "ES2019",
      "outDir": ".build",
      "rootDir": "./",
      "module": "commonjs",
      "allowJs": true,
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "baseUrl": ".",
      "paths": {
          "@core/*": ["./src/core/*"],
          "@entities/*": ["./src/entities/*"],
          "@repositories/*": ["./src/repositories/*"],
          "@services/*": ["./src/services/*"],
          "@shared/*": ["./src/shared/*"],
          "@specs/*": ["./src/specs/*"],
          "@useCases/*": ["./src/useCases/*"]
        }
  },
  "include": [
      "src/**/*.ts",
      "src/**/*.js"
  ],
  "exclude": [
      "node_modules/**/*",
      ".serverless/**/*",
      ".webpack/**/*",
      "_warmup/**/*",
      ".vscode/**/*"
  ]
}
