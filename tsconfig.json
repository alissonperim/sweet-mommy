{
  "compilerOptions": {
      "experimentalDecorators": true,
      "lib": [
          "ESNext"
      ],
      "moduleResolution": "node",
      "removeComments": true,
      "sourceMap": true,
      "strict": true,
      "target": "ES2019",
      "outDir": ".build",
      "rootDir": "./",
      "module": "commonjs",
      "allowJs": true,
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "baseUrl": ".",
      "paths": {}
  },
  "include": [
      "src/**/*.ts",
      "src/**/*.js"
  ],
  "exclude": [
      "node_modules/**/*",
      ".serverless/**/*",
      ".webpack/**/*",
      "_warmup/**/*",
      ".vscode/**/*"
  ]
}
